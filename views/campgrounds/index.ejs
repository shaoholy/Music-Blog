<% include ../partials/header %>


<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h2>Welcome to My MusicPlate!</h2>
            <p>A site you can share and view your favourite albums!</p>
            <p>
                <a class = " btn btn-primary btn-lg" href = "/album/new">add new album</a>
            </p>
        </div>
    </header>
    
    <div class = "row">
        <div class = "col-lg-12">
            <h4>Our Most Popular Albums</h4>
        </div>
    </div>
    
    <div class = "row text-center" style = "display:flex; flex-wrap: wrap;">
        <% campground.forEach(function(camp){ %>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">
                    <img src= "<%= camp.image %>" >
                    <div class = "caption">
                        <h4><%= camp.name %></h4>
                    </div>
                    <p>
                        <a href ="/album/<%= camp._id %>" class = "btn btn-primary">more info.</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
    
</div>


<% include ../partials/footer %>