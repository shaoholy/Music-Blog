<% include ../partials/header %>


<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h2>Welcome to My MusicPlate!</h2>
            <p>A site you can share and view your favourite albums!</p>
            <p>
                <a class = " btn btn-primary btn-lg" href = "/album/new">add new album</a>
            </p>
        </div>
    </header>
    
    <div class = "row">
        <div class = "col-lg-12">
            <h4>Our Most Popular Albums</h4>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campground.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campground.image %>">
                <div class="caption">
                    <h4><%= campground.name %></h4>
                    <% if (campground.rating === 0) { %>
                    <em>No reviews yet.</em>
                    <% } else { %>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star <% if (campground.rating > 1.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (campground.rating > 2.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (campground.rating > 3.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (campground.rating > 4.5) { %> checked <% } %>"></span>
                    <% } %>
                </div>
                <p>
                    <a href="/album/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
    
</div>


<% include ../partials/footer %>